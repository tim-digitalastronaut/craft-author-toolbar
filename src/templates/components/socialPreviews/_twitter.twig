<div toolbar-show="seoPreview === 'twitter'" class="cat-toolbar-seo-menu-previews-results-twitter">
    <div class="cat-toolbar-seo-menu-previews-results-twitter-thumbnail">
        {% if twitter.image %}
            <img src="{{ twitter.image }}" alt="twitter social preview image">
        {% else %}
            <div class="cat-toolbar-seo-menu-previews-results-placeholder-image">
                {{ svg("@brammortier/craftauthortoolbar/web/icons/image.svg") }}

                <p class="cat-typo-body-md">{{ "No social image provided"|t }}</p>
            </div>
        {% endif %}

        <h3 class="cat-typo-body-sm">{{ twitter.title }}</h3>
    </div>

    <div class="cat-toolbar-seo-menu-previews-results-twitter-main">
        <p class="cat-typo-body-sm">{{ "from"|t }} {{ twitter.url|replace({'https://': '', 'http://': ''})|split('/')[0] }}</p>
    </div>
</div>