{# ======================= #}
{# PROPERTIES              #}
{# ======================= #}
{% set twitter = twitter|default([]) %}
{% set og = og|default([]) %}

{% set previewOptions = [
    { label: "Facebook", id: "facebook"},
    { label: "X/Twitter", id: "twitter"},
    { label: "Linkedin", id: "linkedin"},
    { label: "Whatsapp", id: "whatsapp"},
    { label: "Discord", id: "discord"},
] %}

{# ======================= #}
{# TEMPLATE                #}
{# ======================= #}
<div id="cat-seo-previews" class="cat-toolbar-seo-menu-previews-results">
    <div class="cat-toolbar-seo-menu-previews-results-top">
        <div>
            <h2 class="cat-typo-body-md cat-semi-bold">{{ "Platforms"|t }}</h2>

            <p class="cat-typo-body-sm">{{ "Get a preview of how your page will look for other people when shared on different social platforms"|t }}</p>
        </div>

        <ul class="cat-toolbar-seo-menu-previews-results-option-tabs">
            {% for option in previewOptions %}
                <li class="cat-toolbar-seo-menu-previews-results-option-tabs-item">
                    <button 
                        toolbar-on:click="seoPreview = '{{ option.id }}'" 
                        toolbar-bind:class="{ 'active': seoPreview === '{{ option.id }}'}"
                        class="cat-toolbar-seo-menu-previews-results-option-tabs-item-button cat-typo-body-sm"
                    >
                        {{ option.label }}     
                    </button>
                </li>
            {% endfor %}
        </ul>
    </div>
    
    {% include "author-toolbar/components/socialPreviews/_facebook" %}

    {% include "author-toolbar/components/socialPreviews/_twitter" %}

    {% include "author-toolbar/components/socialPreviews/_linkedin" %}

    {% include "author-toolbar/components/socialPreviews/_whatsapp" %}

    {% include "author-toolbar/components/socialPreviews/_discord" %}
</div>
